@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
  <form asp-controller="Security" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
      <li>
        <a asp-controller="Manage" asp-action="Index" title="Manage">Hello @User.Identity.Name!</a>
      </li>
      <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
  </form>
}
else
{
  <ul class="nav navbar-nav navbar-right">        
    <li><a asp-controller="Security" asp-action="Login">Log in</a></li>
  </ul>
}
