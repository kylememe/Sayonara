@{
  ViewBag.Title = "New Extract";
}

<div class="row">	
  <div class="col-md-8 col-md-offset-2 defaultform">
    <form action="/Extract/Save" class="form-horizontal">
			<fieldset>
				<legend>New Extract</legend>
				<div class="control-group">
					<label for="facilityID">Facility</label>
					<div class="controls">						
						<input type="text" class="form-control" placeholder="Enter Facility Name" name="facilityID" />
					</div>
				</div>
				<div class="control-group">
					<label>Type</label>
					<div class="controls">
						<p>
							<button type="button" class="btn btn-primary btn-lg">CSV</button>
							<button type="button" class="btn btn-default btn-lg">PDF</button>
						</p>
						<input type="hidden" name="format" value="csv" />
					</div>
				</div>
				<div class="control-group hidden">
					<label for="documentationview">Documentation View</label>
					<div class="controls">
						<select id="documentationview"></select>
					</div>
				</div>
				<div class="control-group">
					<label for="extractiondate">Extract Date</label>
					<div class="controls">
						<input type="date" name="extractiondate" />
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<button type="submit" class="btn btn-primary">Submit</button>
						<a href="/home/index" class="btn btn-default" role="button">Cancel</a>
					</div>
				</div>
			</fieldset>
    </form>
  </div>  
</div>